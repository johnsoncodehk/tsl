{
	"private": true,
	"name": "vscode-tsslint",
	"version": "1.0.14",
	"repository": {
		"type": "git",
		"url": "https://github.com/johnsoncodehk/tsslint.git",
		"directory": "packages/vscode"
	},
	"sponsor": {
		"url": "https://github.com/sponsors/johnsoncodehk"
	},
	"main": "./extension.js",
	"displayName": "TSSLint",
	"description": "The TSSLint VSCode Extension",
	"author": "johnsoncodehk",
	"publisher": "johnsoncodehk",
	"engines": {
		"vscode": "^1.82.0"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"languages": [
			{
				"id": "plaintext",
				"configuration": "./xxx.json"
			}
		],
		"typescriptServerPlugins": [
			{
				"name": "@tsslint/typescript-plugin",
				"enableForWorkspaceTypeScriptVersions": true
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "rm -rf node_modules && npm install",
		"postpack": "rm -rf node_modules && pnpm install",
		"postrelease": "rm -rf node_modules && pnpm install",
		"pack": "vsce package",
		"release": "vsce publish"
	},
	"dependencies": {
		"@tsslint/typescript-plugin": "1.0.14"
	},
	"devDependencies": {
		"vsce": "latest"
	}
}
